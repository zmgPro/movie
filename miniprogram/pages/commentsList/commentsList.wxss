/* pages/commentsList/commentsList.wxss */
.comments{
  height: 270rpx;
  /* border-bottom: 1rpx solid gray; */
  margin-bottom: 5rpx;
  background-color: white;

}
.userInfo{
  display: flex;
  margin-left:100rpx;
  padding-top: 50rpx;
}
.userImage{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}
.userName{
  line-height: 100rpx;
  margin-left: 50rpx;
  font-size: 40rpx;
  
  opacity: 0.7;
}
.comments-text,.comments-voice{
  margin-left: 120rpx;
  opacity: 0.5;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.comments-voice{
  background-color: rgba(187, 187, 187, 0.61);
  border:1rpx solid rgba(128, 128, 128, 0.541);
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 5rpx;
}

.backIndex{
  position: absolute;
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  bottom: 0;
  opacity: 0.5;
  font-size: 40rpx;
  text-align: center;
  border: 1rpx solid rgba(128, 128, 128, 0.342);
}
